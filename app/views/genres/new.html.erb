<% if @genre.errors.any? %>
    <div id="error_explanation">
      <h2><%= @genre.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<h1>ジャンル投稿画面</h1>

<%= form_for(@genre) do |f| %>

<h4>名前</h4>
<%= f.text_field :genre_name %>

<%= f.submit "作成" %>

<% end %>